<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <!-- UIkit CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.16.15/dist/css/uikit.min.css" />
    <!-- UIkit JS -->
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.16.15/dist/js/uikit.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.16.15/dist/js/uikit-icons.min.js"></script>

    <link rel="stylesheet" href="/css/style.css">
    <title>My Node.js App</title>
</head>
<body>
  <nav class="uk-navbar-container uk-navbar-transparent" uk-navbar>
    <div class="uk-navbar-left uk-margin-left">
      <ul class="uk-navbar-nav">
        <li><a href="/" class="uk-button uk-button-text">Главная страница</a></li>
      </ul>
    </div>
    <div class="uk-navbar-right uk-margin-right">
      <ul class="uk-navbar-nav">
        <% if (session.isAuthenticated) { %>
        <li><a href="/logout" uk-icon="icon: sign-out" class="uk-button uk-button-text">Выход</a></li>
        <% } else { %>
        <li><a href="/login" uk-icon="icon: sign-in" class="uk-button uk-button-text">Вход</a></li>
        <li><a href="/register" uk-icon="icon: user" class="uk-button uk-button-text">Регистрация</a></li>
        <% } %>
      </ul>
    </div>
  </nav>
  </body>
</html>